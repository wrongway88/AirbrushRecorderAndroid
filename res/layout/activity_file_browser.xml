<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
	    android:id="@+id/dropdown_file"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
    
    <TextView android:id="@+id/textview_flight_data"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="" />
    
    <Button
        android:id="@+id/button_submit_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_submit_flight"
        android:onClick="submitSelectedFlight" />
    
    <Button
        android:id="@+id/button_delete_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete_flight"
        android:onClick="deleteSelectedFlight" />
    
    <Button
        android:id="@+id/button_back_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back_to_main"
        android:onClick="backToMain" />

</LinearLayout>